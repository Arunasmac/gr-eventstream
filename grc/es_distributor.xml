<?xml version="1.0"?>
<block>
    <name>Message Distributor</name>
    <key>es_distributor</key>
    <category>EVENTSTREAM</category>
    <import>import es</import>
    <make>es.distributor((not $show_samp_ports)*$num_streams*[$type.size],$nports,not $add_reg_port)</make>

      <param>
        <name>IO Type</name>
        <key>type</key>
        <type>enum</type>
        <option>
            <name>Complex</name>
            <key>complex</key>
            <opt>size:gr.sizeof_gr_complex</opt>
        </option>
        <option>
            <name>Float</name>
            <key>float</key>
            <opt>size:gr.sizeof_float</opt>
        </option>
        <option>
            <name>Int</name>
            <key>int</key>
            <opt>size:gr.sizeof_int</opt>
        </option>
        <option>
            <name>Short</name>
            <key>short</key>
            <opt>size:gr.sizeof_short</opt>
        </option>
        <option>
            <name>Complex Short</name>
            <key>sc16</key>
            <opt>size:2*gr.sizeof_short</opt>
        </option>
        <option>
            <name>Byte</name>
            <key>byte</key>
            <opt>size:gr.sizeof_char</opt>
        </option>
    </param>


    <param>
        <name>Num Streams</name>
        <key>num_streams</key>
        <value>1</value>
        <type>int</type>
    </param>

    <param>
      <name>Num Out Msg Ports</name>
      <key>nports</key>
      <value>1</value>
      <type>int</type>
    </param>

  <param>
    <name>Show Registration Port</name>
    <key>add_reg_port</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>YES</name>
        <key>False</key>
    </option>
    <option>
        <name>No</name>
        <key>True</key>
    </option>
  </param>

  <!-- Beware: YES is false, NO is true. -->
  <param>
    <name>Show Sample Ports</name>
    <key>show_samp_ports</key>
    <value>False</value>
    <type>enum</type>
    <hide>part</hide>
    <option>
        <name>YES</name>
        <key>False</key>
    </option>
    <option>
        <name>NO</name>
        <key>True</key>
    </option>
  </param>

  <sink>
    <name>in</name>
    <type>$type</type>
    <vlen>1</vlen>
    <nports>$num_streams</nports>
    <optional>1</optional>
    <hide>$show_samp_ports</hide>
  </sink>

  <sink>
    <name>dist_random</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <sink>
    <name>dist_all</name>
    <type>message</type>
    <optional>1</optional>
    <hide>$add_reg_port</hide>
  </sink>

  <source>
    <name>out</name>
    <type>$type</type>
    <vlen>1</vlen>
    <nports>$num_streams</nports>
    <optional>1</optional>
    <hide>$show_samp_ports</hide>
  </source>
  <source>
    <name>dist_out</name>
    <type>message</type>
    <nports>$nports</nports>
    <optional>1</optional>
  </source>


</block>
